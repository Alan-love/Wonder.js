  },
  "scripts": {
    "build": "bsb -clean-world -make-world",
    "codecov": "cat test/coverage/lcov.info | codecov",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "start": "node ./server/app.js",
    "test": "jest --config jest.json",
    "test:coverage": "jest --config jest_coverage.json",
    "test:pf": "jest --config jest_performance.json",
    "test:pf_generate": "jest --config jest_performance_generate.json",
    "test:watch": "jest --watch --config jest.json",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "watch": "bsb -clean-world -make-world -w"
