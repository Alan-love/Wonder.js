  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.8",
    "@commitlint/config-conventional": "^5.2.3",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "bs-platform": "2.1.0",
    "codecov.io": "^0.1.6",
    "cz-customizable": "^5.2.0",
    "express": "^4.16.1",
