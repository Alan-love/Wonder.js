{
  "automock": false,
  "moduleFileExtensions": [
    "js"
  ],
  "testRegex": "lib/es6_global/test/(unit|integration)/.+_test\\.js$",
  "transformIgnorePatterns": [
    "<rootDir>/node_modules/(?!(.*bs-)|wonder-commonlib|wonder-log|wonder-most-animation-frame)"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/test/helper/jest/specHelper.js",
  "notify": false,
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/coverage/",
  "coveragePathIgnorePatterns": [
    "<rootDir>/lib/es6_global/src/.+/Director.*",
    "<rootDir>/lib/es6_global/src/service/atom/",
    "<rootDir>/lib/es6_global/src/service/primitive/",
    "<rootDir>/lib/es6_global/src/external/",
    "<rootDir>/lib/es6_global/src/.+/LoaderManagerAPI.js",
    "<rootDir>/lib/es6_global/src/Index.*",
    "<rootDir>/lib/es6_global/src/.+/RenderWorkerIndex.*",
    "<rootDir>/lib/es6_global/src/.+/RenderWorkerSystem.*"
  ],
  "collectCoverageFrom": [
    "lib/es6_global/src/**/*.{js}",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "coverageThreshold": {
    "global": {
      "lines": 95,
      "statements": 95,
      "branches": 80,
      "functions": 94
    }
  }
}